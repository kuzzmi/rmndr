{
    "manifest_version": 2,

    "name": "__NAME__",
    "description": "__DESCRIPTION__",
    "version": "__VERSION__",

    "icons": {
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": {},
        "default_title": "Yominder",
        "default_popup": "index.html"
    },

    "background": {
        "scripts": [ "background.js" ],
        "persistent": true
    },

    "permissions": [
        "tabs",
        "alarms",
        "storage",
        "notifications"
    ]
}
